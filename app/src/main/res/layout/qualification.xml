<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/login_form"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center_horizontal">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loginscrall">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualification"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/degreespinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:ms_hint="Degree"
        app:ms_enableFloatingLabel="true"
        app:ms_baseColor="@color/disabled_color"
        android:layout_marginLeft="8dp"
        app:ms_thickness="1.5dp"></fr.ganfra.materialspinner.MaterialSpinner>

        <android.support.design.widget.TextInputLayout android:layout_height="match_parent"
            android:layout_width="match_parent">
            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:mtf_image="@drawable/ic_perm_identity_black_24dp"
                app:mtf_backgroundColor="@color/disabled_color"
                android:id="@+id/txtboard">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:id="@+id/txtclg"
                    android:hint="Board/Collage"
                    />

            </com.github.florent37.materialtextfield.MaterialTextField>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout android:layout_height="match_parent"
            android:layout_width="match_parent">
            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:mtf_image="@drawable/ic_perm_identity_black_24dp"
                app:mtf_backgroundColor="@color/disabled_color"
                android:id="@+id/txtyear">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:id="@+id/txtypassing"
                    android:hint="Year Of Passing"
                    />

            </com.github.florent37.materialtextfield.MaterialTextField>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout android:layout_height="match_parent"
            android:layout_width="match_parent">
            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:mtf_image="@drawable/ic_perm_identity_black_24dp"
                app:mtf_backgroundColor="@color/disabled_color"
                android:id="@+id/txtpercent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:id="@+id/txtpercnt"
                    android:hint="Percent"
                    />

            </com.github.florent37.materialtextfield.MaterialTextField>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout android:layout_height="match_parent"
            android:layout_width="match_parent">
            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:mtf_image="@drawable/ic_perm_identity_black_24dp"
                app:mtf_backgroundColor="@color/disabled_color"
                android:id="@+id/txtgrade">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:id="@+id/txtgrd"
                    android:hint="Grade"
                    />

            </com.github.florent37.materialtextfield.MaterialTextField>
        </android.support.design.widget.TextInputLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/loginripple"
            android:layout_width="300px"
            android:layout_gravity="center_horizontal"
            android:layout_height="120px"
            app:mrl_rippleOverlay="true"
            android:layout_marginTop="20dp">

            <info.hoang8f.widget.FButton
                fbutton:buttonColor="@color/fbutton_color_belize_hole"
                fbutton:shadowColor="@color/colorPrimary"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"
                android:text="Submit"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btndone"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        </com.balysv.materialripple.MaterialRippleLayout>


    </LinearLayout>
</ScrollView>
    </LinearLayout>