
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/cnd_form"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple1"
        android:layout_width="match_parent"
        android:layout_marginTop="100px"
        android:layout_height="200px"
        app:mrl_rippleOverlay="true">

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/fbutton_color_belize_hole"
        fbutton:shadowColor="@color/colorPrimary"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:text="Candidate Login"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btncanlogin"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />
    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple2"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginTop="30dp"
        app:mrl_rippleOverlay="true">

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="@color/fbutton_color_belize_hole"
            fbutton:shadowColor="@color/colorPrimary"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            android:text="Company Login"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btncmplogin"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </com.balysv.materialripple.MaterialRippleLayout>

    <TextView
        android:text="Don't Have an account?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="300px"
        android:textSize="50px"
        android:paddingLeft="80dp"
        android:textStyle="bold"/>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple3"
        android:layout_width="match_parent"
        android:layout_marginTop="100px"
        android:layout_height="200px"
        app:mrl_rippleOverlay="true">

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="@color/fbutton_color_belize_hole"
            fbutton:shadowColor="@color/colorPrimary"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            android:text="SignUp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnsignup"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </com.balysv.materialripple.MaterialRippleLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>