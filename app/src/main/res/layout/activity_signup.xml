<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/login_form"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple1"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginTop="30dp"
            app:mrl_rippleOverlay="true"
            android:layout_gravity="center_vertical">

            <info.hoang8f.widget.FButton
                fbutton:buttonColor="@color/shadowColor"
                fbutton:shadowColor="@color/colorPrimary"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"
                android:text="Candidate SignUp"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btncansignup"
                android:textStyle="bold"
                android:textColor="@color/colorAccent2"
                android:layout_gravity="center_vertical" />
        </com.balysv.materialripple.MaterialRippleLayout>


        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple2"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginTop="30dp"
            app:mrl_rippleOverlay="true"
            android:layout_gravity="center_vertical">

            <info.hoang8f.widget.FButton
                fbutton:buttonColor="@color/colorPrimary"
                fbutton:shadowColor="@color/colorPrimary"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"
                android:text="Company SignUp"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btncmpsignup"
                android:textStyle="bold"
                android:textColor="@color/colorAccent2"/>
        </com.balysv.materialripple.MaterialRippleLayout>



    </LinearLayout>
    </ScrollView>
</LinearLayout>